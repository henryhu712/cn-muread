  );
}

/**
 * Find p
 */
function page_find_p_elements($html, &$length, &$ps) {

  if ($length > MAX_CONTENT) {
    return;
  }

  $obj = new simple_html_dom();
  $obj->load($html);
  foreach ($obj->find("*") as $element) {
    if ($element->tag == 'p') {
      $text = trim($element->plaintext);
      $len = strlen($text);
      if ($len > 0) {
        $ps[] = $text;
        $length += $len;
      }
    }
    else {
      page_find_p_elements($element->innertext, $length, $ps);
    }
  }
}

